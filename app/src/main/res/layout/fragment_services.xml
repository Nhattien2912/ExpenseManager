<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Premium Gradient Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_services_header"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả tính năng của bạn"
            android:textSize="14sp"
            android:textColor="@color/text_white_opacity_70"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp">

            <!-- Section: Quản lý tài chính -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUẢN LÝ TÀI CHÍNH"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- Row 1: Sổ nợ, Tiết kiệm, Hạn mức -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Sổ nợ -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDebt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_orange">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_debt"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Sổ nợ"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tiết kiệm -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSavings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_pink">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_savings"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tiết kiệm"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Hạn mức -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBudget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_blue">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_budget"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Hạn mức"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2: Dự tính, Quản lý ví, Báo cáo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="28dp">

                <!-- Dự tính -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPlanned"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_green">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_planned"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Dự tính"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Quản lý ví -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_purple">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_wallet"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Quản lý ví"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Báo cáo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_teal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_chart"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Báo cáo"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Section: Công cụ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÔNG CỤ"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- Row 3: Danh mục, Tags, Thông báo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Danh mục -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_amber">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_category"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Danh mục"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tags -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_indigo">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_tag"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tags"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thông báo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_red">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notification"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Thông báo"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tìm kiếm -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="14dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="?attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_service_icon_cyan">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_search"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tìm kiếm"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>