<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn mức chi tiêu"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333" />
            <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtLimitAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000.000 đ"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarLimit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/bg_progress_rounded"
            android:progressTint="#2196F3"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtSpentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã chi: 0 đ"
                android:textSize="11sp"
                android:textColor="#757575" />
            <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtRemainingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn: 0 đ"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>